<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.vbstudio.covid19.core.ui.TextViewBold
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_stats_margin"
        android:gravity="center"
        android:textColor="@color/topStatsHeader"
        tools:text="Top 5 Recoveries" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="36dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/top_stats_margin"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@color/topStatsSeparator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top_stats_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>