<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppSupportActionBar</item>
        <item name="android:actionBarStyle">@style/AppSupportActionBar</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppSupportActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="background">@color/toolbarBgColor</item>
        <item name="android:background">@color/toolbarBgColor</item>
    </style>

    <style name="BottomNavStyle" parent="Theme.MaterialComponents">
        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>
        <item name="colorPrimary">@color/colorPrimaryBottomNav</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryBottomNav</item>
        <item name="font">@font/montserrat_regular</item>
    </style>

    <style name="StatesSectionHomeConfirmed">
        <item name="textColor">@color/confirmedCase</item>
        <item name="counterTextSize">@dimen/text_xlarge</item>
        <item name="labelCounterTextSize">@dimen/text_small</item>
        <item name="separatorWidth">36dp</item>
        <item name="separatorThickness">0.5dp</item>
        <item name="separatorMargin">@dimen/margin_medium</item>
        <item name="separatorColor">@color/confirmedCase</item>
    </style>

    <style name="StatesSectionHomeActive">
        <item name="textColor">@color/activeCase</item>
        <item name="counterTextSize">@dimen/text_xlarge</item>
        <item name="labelCounterTextSize">@dimen/text_small</item>
        <item name="separatorWidth">36dp</item>
        <item name="separatorThickness">0.5dp</item>
        <item name="separatorMargin">@dimen/margin_medium</item>
        <item name="separatorColor">@color/activeCase</item>
    </style>

    <style name="StatesSectionHomeRecovered">
        <item name="textColor">@color/recoveredCase</item>
        <item name="counterTextSize">@dimen/text_xlarge</item>
        <item name="labelCounterTextSize">@dimen/text_small</item>
