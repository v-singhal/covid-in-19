        <item name="separatorThickness">0.5dp</item>
        <item name="separatorMargin">@dimen/margin_medium</item>
        <item name="separatorColor">@color/recoveredCase</item>
    </style>

    <style name="StatesSectionHomeDeceased">
        <item name="textColor">@color/deceasedCase</item>
        <item name="counterTextSize">@dimen/text_xlarge</item>
        <item name="labelCounterTextSize">@dimen/text_small</item>
        <item name="separatorWidth">36dp</item>
        <item name="separatorThickness">0.5dp</item>
        <item name="separatorMargin">@dimen/margin_medium</item>
        <item name="separatorColor">@color/deceasedCase</item>
    </style>

    <style name="StatesSectionHomeResource">
        <item name="textColor">@color/resourceCount</item>
        <item name="counterTextSize">@dimen/text_xlarge</item>
        <item name="labelCounterTextSize">@dimen/text_small</item>
        <item name="separatorWidth">36dp</item>
        <item name="separatorThickness">0.5dp</item>
        <item name="separatorMargin">@dimen/margin_medium</item>
        <item name="separatorColor">@color/resourceCount</item>
    </style>

    <style name="StatesSectionCardConfirmed">
        <item name="textColor">@color/confirmedCase</item>
        <item name="counterTextSize">@dimen/text_regular</item>
        <item name="labelCounterTextSize">@dimen/text_mini</item>
        <item name="separatorWidth">16dp</item>
        <item name="separatorThickness">0.3dp</item>
        <item name="separatorMargin">@dimen/margin_small</item>
