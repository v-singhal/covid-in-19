        <item name="separatorColor">@color/deceasedCase</item>
    </style>

    <style name="StatesSectionCardResource">
        <item name="textColor">@color/resourceCount</item>
        <item name="counterTextSize">@dimen/text_regular</item>
        <item name="labelCounterTextSize">@dimen/text_mini</item>
        <item name="separatorWidth">16dp</item>
        <item name="separatorThickness">0.3dp</item>
        <item name="separatorMargin">@dimen/margin_small</item>
        <item name="separatorColor">@color/resourceCount</item></style>

</resources>
